<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
    android:id="@+id/perfilTextView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Perfil"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="22dp"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="21dp"
    android:textColor="@color/blue_text"
    android:textSize="28sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/perfilCardView"
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:layout_constraintTop_toBottomOf="@id/perfilTextView"
        app:layout_constraintStart_toStartOf="@id/perfilTextView"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/perfilImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/purple_500"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/IdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Carlos Albuquerque"
        android:textColor="@color/black"
        android:layout_marginLeft="24dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/perfilCardView"
        app:layout_constraintStart_toEndOf="@id/perfilCardView"/>

    <TextView
        android:id="@+id/registeredPetsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/IdTextView"
        app:layout_constraintTop_toBottomOf="@id/IdTextView"
        android:text="3 pets cadastrados"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        />

    <View
        android:id="@+id/linearView"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/perfilCardView"
        android:background="@color/gray_view"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/perfilIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="@id/perfilCardView"
        app:layout_constraintTop_toBottomOf="@id/perfilCardView"
        android:layout_marginTop="60dp"
        android:src="@drawable/perfil_img"
        app:tint="@color/blue_text" />

    <TextView
        android:id="@+id/personalDataTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meus Dados"
        app:layout_constraintStart_toEndOf="@id/perfilIcon"
        app:layout_constraintTop_toTopOf="@id/perfilIcon"
        app:layout_constraintBottom_toBottomOf="@id/perfilIcon"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/gray_text"/>



</androidx.constraintlayout.widget.ConstraintLayout>